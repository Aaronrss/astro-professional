---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/Hero.astro';

const skills = {
  frontend: ['HTML5', 'CSS3', 'JavaScript', 'TypeScript', 'React', 'Vue.js', 'Astro', 'Tailwind CSS'],
  backend: ['Node.js', 'Python', 'Express', 'FastAPI', 'PostgreSQL', 'MongoDB'],
  tools: ['Git', 'Docker', 'AWS', 'Vercel', 'Figma', 'VS Code']
};

const experience = [
  {
    title: 'Senior Frontend Developer',
    company: 'Tech Company',
    period: '2022 - Presente',
    description: 'Desarrollo de aplicaciones web escalables utilizando React y TypeScript. Liderazgo de equipo de 5 desarrolladores.'
  },
  {
    title: 'Full Stack Developer',
    company: 'Startup Inc.',
    period: '2020 - 2022',
    description: 'Desarrollo full stack con Node.js y Vue.js. Implementación de CI/CD y mejoras de rendimiento.'
  },
  {
    title: 'Junior Developer',
    company: 'Digital Agency',
    period: '2018 - 2020',
    description: 'Desarrollo de sitios web responsivos y mantenimiento de aplicaciones existentes.'
  }
];

const education = [
  {
    degree: 'Ingeniería en Sistemas Computacionales',
    institution: 'Universidad Tecnológica',
    period: '2014 - 2018'
  },
  {
    degree: 'Certificación AWS Solutions Architect',
    institution: 'Amazon Web Services',
    period: '2021'
  }
];
---

<BaseLayout title="Sobre Mí | Portfolio" description="Conoce más sobre mi experiencia y habilidades como desarrollador">
  <Hero
    title="Sobre Mí"
    subtitle="Desarrollador Web"
    description="Apasionado por crear soluciones digitales innovadoras que marquen la diferencia."
  />

  <section class="about-section">
    <div class="container">
      <div class="about-grid">
        <div class="about-main">
          <div class="about-intro">
            <div class="profile-image">
              <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&h=400&fit=crop" alt="Profile" />
            </div>
            <div class="intro-content">
              <h2>¡Hola! Soy Juan Pérez</h2>
              <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Con más de 6 años de experiencia en desarrollo web, me especializo en crear aplicaciones modernas y escalables.
              </p>
              <p>
                Mi pasión es transformar ideas en productos digitales que ofrezcan experiencias excepcionales. Creo firmemente en el código limpio, las mejores prácticas y el aprendizaje continuo.
              </p>
              <div class="intro-actions">
                <a href="mailto:hello@example.com" class="btn btn-primary">Contactar</a>
                <a href="/portfolio" class="btn btn-secondary">Ver Proyectos</a>
              </div>
            </div>
          </div>

          <div class="experience-section">
            <h3>Experiencia Profesional</h3>
            <div class="timeline">
              {experience.map((job) => (
                <div class="timeline-item">
                  <div class="timeline-marker"></div>
                  <div class="timeline-content">
                    <div class="timeline-header">
                      <h4>{job.title}</h4>
                      <span class="timeline-period">{job.period}</span>
                    </div>
                    <p class="timeline-company">{job.company}</p>
                    <p class="timeline-description">{job.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="education-section">
            <h3>Educación</h3>
            <div class="education-list">
              {education.map((edu) => (
                <div class="education-item">
                  <h4>{edu.degree}</h4>
                  <p class="education-institution">{edu.institution}</p>
                  <span class="education-period">{edu.period}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <aside class="about-sidebar">
          <div class="skills-card">
            <h3>Frontend</h3>
            <div class="skills-list">
              {skills.frontend.map((skill) => (
                <span class="skill-tag">{skill}</span>
              ))}
            </div>
          </div>

          <div class="skills-card">
            <h3>Backend</h3>
            <div class="skills-list">
              {skills.backend.map((skill) => (
                <span class="skill-tag">{skill}</span>
              ))}
            </div>
          </div>

          <div class="skills-card">
            <h3>Herramientas</h3>
            <div class="skills-list">
              {skills.tools.map((skill) => (
                <span class="skill-tag">{skill}</span>
              ))}
            </div>
          </div>

          <div class="contact-card">
            <h3>Contacto</h3>
            <ul class="contact-list">
              <li>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                  <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                </svg>
                <a href="mailto:hello@example.com">hello@example.com</a>
              </li>
              <li>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
                  <path d="M9 18c-4.51 2-5-2-7-2"></path>
                </svg>
                <a href="https://github.com/yourusername" target="_blank">github.com/yourusername</a>
              </li>
              <li>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                  <rect width="4" height="12" x="2" y="9"></rect>
                  <circle cx="4" cy="4" r="2"></circle>
                </svg>
                <a href="https://linkedin.com/in/yourusername" target="_blank">linkedin.com/in/yourusername</a>
              </li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .about-section {
    padding: 4rem 0;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 3rem;
    align-items: start;
  }

  .about-intro {
    display: flex;
    gap: 2rem;
    margin-bottom: 4rem;
    padding: 2rem;
    background-color: var(--bg-secondary);
    border-radius: 1rem;
  }

  .profile-image {
    flex-shrink: 0;
  }

  .profile-image img {
    width: 180px;
    height: 180px;
    border-radius: 1rem;
    object-fit: cover;
  }

  .intro-content h2 {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .intro-content p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .intro-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .experience-section,
  .education-section {
    margin-bottom: 3rem;
  }

  .experience-section h3,
  .education-section h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--border-color);
  }

  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: var(--border-color);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 2rem;
  }

  .timeline-marker {
    position: absolute;
    left: -2rem;
    top: 0.25rem;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: var(--color-primary-500);
    transform: translateX(-5px);
  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .timeline-header h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .timeline-period {
    font-size: 0.875rem;
    color: var(--color-primary-500);
    font-weight: 500;
  }

  .timeline-company {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }

  .timeline-description {
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .education-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .education-item {
    padding: 1.5rem;
    background-color: var(--bg-secondary);
    border-radius: 0.75rem;
  }

  .education-item h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
  }

  .education-institution {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  .education-period {
    font-size: 0.75rem;
    color: var(--color-primary-500);
    font-weight: 500;
  }

  .about-sidebar {
    position: sticky;
    top: 5rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .skills-card,
  .contact-card {
    padding: 1.5rem;
    background-color: var(--bg-secondary);
    border-radius: 1rem;
    border: 1px solid var(--border-color);
  }

  .skills-card h3,
  .contact-card h3 {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .skills-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-tag {
    padding: 0.375rem 0.75rem;
    background-color: var(--bg-tertiary);
    color: var(--text-secondary);
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .contact-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .contact-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border-color);
  }

  .contact-list li:last-child {
    border-bottom: none;
  }

  .contact-list svg {
    color: var(--text-muted);
    flex-shrink: 0;
  }

  .contact-list a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    word-break: break-all;
    transition: color 0.2s ease;
  }

  .contact-list a:hover {
    color: var(--color-primary-500);
  }

  @media (max-width: 1024px) {
    .about-grid {
      grid-template-columns: 1fr;
    }

    .about-sidebar {
      position: static;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .about-intro {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .intro-actions {
      justify-content: center;
    }

    .about-sidebar {
      grid-template-columns: 1fr;
    }
  }
</style>
