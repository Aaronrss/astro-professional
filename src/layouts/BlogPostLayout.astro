---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  frontmatter: CollectionEntry<'blog'>['data'];
}

const { frontmatter } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(frontmatter.pubDate);
---

<BaseLayout title={frontmatter.title} description={frontmatter.description} image={frontmatter.image}>
  <article class="blog-post">
    <header class="post-header">
      <div class="container">
        <div class="post-meta">
          <a href={`/blog?category=${frontmatter.category}`} class="post-category">{frontmatter.category}</a>
          <time datetime={frontmatter.pubDate.toISOString()}>{formattedDate}</time>
        </div>
        <h1 class="post-title">{frontmatter.title}</h1>
        <p class="post-description">{frontmatter.description}</p>
        {frontmatter.tags && frontmatter.tags.length > 0 && (
          <div class="post-tags">
            {frontmatter.tags.map((tag: string) => (
              <a href={`/blog?tag=${tag}`} class="tag">{tag}</a>
            ))}
          </div>
        )}
      </div>
    </header>
    
    {frontmatter.image && (
      <div class="post-image">
        <div class="container">
          <img src={frontmatter.image} alt={frontmatter.title} />
        </div>
      </div>
    )}

    <div class="post-content container">
      <div class="prose">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding-bottom: 4rem;
  }

  .post-header {
    padding: 4rem 0 2rem;
    text-align: center;
    background: linear-gradient(180deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .post-category {
    padding: 0.25rem 0.75rem;
    background-color: var(--color-primary-500);
    color: white;
    border-radius: 9999px;
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.2s ease;
  }

  .post-category:hover {
    background-color: var(--color-primary-600);
  }

  .post-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--text-primary);
    max-width: 800px;
    margin: 0 auto 1rem;
    line-height: 1.2;
  }

  .post-description {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto 1.5rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
  }

  .post-image {
    margin: 2rem 0;
  }

  .post-image img {
    width: 100%;
    max-height: 500px;
    object-fit: cover;
    border-radius: 1rem;
  }

  .post-content {
    max-width: 800px;
  }

  @media (max-width: 768px) {
    .post-header {
      padding: 2rem 0 1rem;
    }

    .post-title {
      font-size: 1.75rem;
    }

    .post-description {
      font-size: 1rem;
    }
  }
</style>
